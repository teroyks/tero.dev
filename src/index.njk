---
layout: layouts/base.njk
title: Latest Posts
---

<section>
  {% set posts = collections.blog | reverse | batch(10) | first %}
  {% for post in posts %}
    <article>
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <small><time datetime="{{ post.date.toISOString() | truncate(10, true, '') }}">{{ post.date | date }}</time></small>
      {% if post.data.description %}
        <p>{{ post.data.description }}</p>
      {% endif %}
    </article>
  {% else %}
    <p>No posts yet.</p>
  {% endfor %}
</section>
