---
eleventyExcludeFromCollections: true
permalink: /feed.json
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ site.title }}",
  "home_page_url": "{{ site.url }}/",
  "feed_url": "{{ site.url }}/feed.json",
  "description": "{{ site.description }}",
  "authors": [
    {
      "name": "{{ site.author }}"
    }
  ],
  "language": "en",
  "items": [
    {%- set posts = collections.blog | reverse | batch(20) | first %}
    {%- for post in posts %}
    {
      "id": "{{ site.url }}{{ post.url }}",
      "url": "{{ site.url }}{{ post.url }}",
      "title": "{{ post.data.title }}",
      "content_html": {{ post.templateContent | dump | safe }},
      "date_published": "{{ post.date.toISOString() }}"
      {%- set contentTags = post.data.tags | reject("equalto", "blog") %}
      {%- if contentTags | length %},
      "tags": {{ contentTags | dump | safe }}
      {%- endif %}
    }{% if not loop.last %},{% endif %}
    {%- endfor %}
  ]
}
